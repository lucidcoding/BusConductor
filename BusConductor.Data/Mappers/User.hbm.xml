<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="BusConductor.Domain.Entities"
                   assembly="BusConductor.Domain">
  <class name="User" table="`User`">
    <id name="Id" column="Id" type="guid">
      <generator class="assigned"/>
    </id>
    <property name="Username" type="string" />
    <property name="Forename" type="string" />
    <property name="Surname" type="string" />
    <property name="AddressLine1" type="string" />
    <property name="AddressLine2" type="string" />
    <property name="AddressLine3" type="string" />
    <property name="Town" type="string" />
    <property name="County" type="string" />
    <property name="Email" type="string" />
    <property name="PostCode" type="string" />
    <property name="TelephoneNumber" type="string" />
    <property name="CreatedOn" type="datetime" />
    <property name="LastModifiedOn" type="datetime" />
    <property name="Deleted" type="bool" />
    <many-to-one name="Role" class="Role" column="RoleId" cascade="save-update" />
    <many-to-one name="CreatedBy" class="User" column="CreatedBy" cascade="save-update" />
    <many-to-one name="LastModifiedBy" class="User" column="LastModifiedBy" cascade="save-update" />
  </class>
</hibernate-mapping>