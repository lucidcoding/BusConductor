<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="BusConductor.Domain.Entities"
                   assembly="BusConductor.Domain">
  <class name="Bus" table="`Bus`">
    <id name="Id" column="Id" type="guid">
      <generator class="assigned"/>
    </id>
    <property name="Name" column="`Name`"/>
    <property name="Description" column="`Description`"/>
    <property name="Overview" column="`Overview`"/>
    <property name="Details" column="`Details`"/>
    <property name="DriveSide" column="`DriveSide`"/>
    <property name="Berth" column="`Berth`"/>
    <property name="Year" column="`Year`"/>  
    <property name="CreatedOn" type="datetime" />
    <property name="LastModifiedOn" type="datetime" />
    <property name="Deleted" type="bool" />
    <many-to-one name="CreatedBy" class="User" column="CreatedBy" cascade="save-update" />
    <many-to-one name="LastModifiedBy" class="User" column="LastModifiedBy" cascade="save-update" />
    <bag name="PricingPeriods" cascade="save-update">
      <key column="BusId"/>
      <one-to-many class="PricingPeriod" />
    </bag>
    <bag name="Bookings" cascade="save-update">
      <key column="BusId"/>
      <one-to-many class="Booking" />
    </bag>
  </class>
</hibernate-mapping>