<Window x:Class="BusConductor.Admin.UI.Views.Shared.ValidationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BusConductor.Admin.UI.ViewModels.Shared" Title="ValidationDialog" Height="300" Width="600">
    <Window.DataContext>
        <local:ValidationViewModel />
    </Window.DataContext>
    <Grid>
        <ListView ItemsSource="{Binding Messages}"  >
            <ListView.View>
                <GridView x:Name="PricingPeriodsGrid">
                    <GridViewColumn >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Name="Message" Content="{Binding}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
