<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.base.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.core.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
    @RenderSection("CSS", required: false)
    <script src="@Url.Content("~/Scripts/Libraries/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Libraries/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/BusConductor.js")" type="text/javascript"></script>
    @RenderSection("JavaScript", required: false)
</head>
<body>
    <div class="main-div">
        <div class="header">
            <img src="/Content/Images/Header.gif" alt="Cool Cat Campers"/>
        </div>
        <div class="menu-bar">
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Home")" >
                        <img src="/Content/Images/MenuHome.gif" alt="Home"/>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Bus")" >
                        <img src="/Content/Images/MenuMeetTheFleet.gif" alt="Meet the Fleet"/>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Rates")" >
                        <img src="/Content/Images/MenuTariff.gif" alt="Tariff"/>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Availability")" >
                        <img src="/Content/Images/MenuAvailability.gif" alt="Home"/>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Booking")" >
                        <img src="/Content/Images/MenuBookACamper.gif" alt="Book a Camper"/>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Contact")" >
                        <img src="/Content/Images/MenuContactUs.gif" alt="Contact Us"/>
                    </a>
                </li>
            </ul>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
